<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0a0909">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longitude_label"
                android:layout_weight="0.1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textIsSelectable="false"
                android:textSize="15dp"
                android:textColor="#ffffff" />

            <TextView  android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
                android:textSize="20dp"
                android:layout_weight="0.4"
                android:textColor="#ffffff" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/latitude_label"
                android:layout_weight="0.1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ffffff" />

            <TextView  android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="0.4"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

            android:onClick="tip_onClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/contactPerson1"
            android:id="@+id/textView12"
            android:textSize="14.5dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView16"
            android:textSize="20dp"
            android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/contactPerson2"
                android:id="@+id/textView13"
                android:textSize="14.5dp"
                android:layout_marginLeft="7dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView17"
                android:textSize="20dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/call_btn"
                android:onClick="call_btn_onClick"
                android:src="@drawable/sos128"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_btn"
                android:onClick="alarm_btn_onClick"
                android:src="@drawable/alert70"
                android:background="@null"
                android:layout_weight="0.1"
                android:layout_margin="2dp"
                android:paddingRight="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/send_btn"
                android:onClick="send_btn_onClick"
                android:layout_weight="0.10"
                android:src="@drawable/message170"
                android:background="@null"
                android:layout_margin="2dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_btn"
                android:onClick="add_btn_onCLick"
                android:layout_weight="0.10"
                android:background="@null"
                android:src="@drawable/gps170"
                android:layout_margin="2dp"
                android:paddingRight="10dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/callperson_btn"
                android:onClick="callperson_btn_onClick"
                android:layout_weight="0.10"
                android:src="@drawable/call170"
                android:background="@null"
                android:layout_margin="2dp" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</ScrollView>